<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ishiharatest.kkart.ishiharabutawarna"
    android:versionCode="2"
    android:versionName="1.0.0.1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeAct">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeAct" />

        <activity
            android:theme="@android:style/Theme.Dialog"
            android:name=".PetunjukTes"
            android:configChanges="orientation"
            android:label="@string/title_activity_petunjuk"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.ishiharatest.kkart.ishiharabutawarna.MainActivity" />

        <activity
            android:name=".TestActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_test"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ShowScoreActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".HowToUseActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_how_to_use"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutMeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_about_me"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ishiharatest.kkart.ishiharabutawarna.MainActivity" />
        </activity>
        <activity
            android:name=".InfoButaWarna"
            android:configChanges="orientation"
            android:label="@string/title_activity_info_buta_warna"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ishiharatest.kkart.ishiharabutawarna.MainActivity" />
        </activity>
        <activity
            android:theme="@android:style/Theme.Dialog"
            android:name=".FeedBackActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_feedback"
            android:screenOrientation="portrait" />
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.ishiharatest.kkart.ishiharabutawarna.MainActivity" />
    </application>

</manifest>
